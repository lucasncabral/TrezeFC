<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marca_dagua"
    tools:context="com.example.lucas.trezefc.fragment.TrezeFragment"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/profile_image11"
        android:layout_marginLeft="55dp"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        android:src="@drawable/brasao"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treze Futebol Clube"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fundação: 07/09/1925"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="www.trezefc.com.br"
            android:textColor="@color/colorPrimaryDark"/>

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/hino_treze"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hino"
            android:textColor="@color/colorPrimaryDark"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/volume"/>
</LinearLayout>

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_history"
        android:orientation="horizontal"
        android:background="@color/gray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="20dp"
            android:paddingTop="9dp"
            android:text="HISTÓRIA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_team"
        android:orientation="horizontal"
        android:background="@color/gray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="20dp"
            android:paddingTop="9dp"
            android:text="ELENCO"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_galeria"
        android:orientation="horizontal"
        android:background="@color/gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="20dp"
            android:paddingTop="9dp"
            android:text="SALA DE TRÓFEUS"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_torcida"
        android:orientation="horizontal"
        android:background="@color/gray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="20dp"
            android:paddingTop="9dp"
            android:text="TORCIDA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_organizacao"
        android:orientation="horizontal"
        android:background="@color/gray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:typeface="serif"
            android:textAlignment="center"
            android:textSize="20dp"
            android:paddingTop="9dp"
            android:text="ORGANIZAÇÃO"/>
    </LinearLayout>

</LinearLayout>
